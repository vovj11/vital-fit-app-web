@page
@model IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="introducao text-center">
    <h1 class="display-4"></h1>
    <img class="logo-grande" src="images/logo.svg" alt="Vital Fit" />
    <h4>A maior loja de artigos esportivos.</h4>
</div>

@if (TempData["TempMensagemSucesso"] != null)
{
    <div class="alert alert-success mt-5 container text-center"
    role="alert" style="width: 80%">
        <h4 class="alert-heading ">Sucesso!</h4>
        <p>Operação realizada com sucesso!</p>
    </div>
}

<section class="secao-roupas mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h3 class="titulo-secao text-center">Roupas</h3>
        </div>
        <div class="card-group d-flex justify-content-between">
            @foreach(var item in Model.ListaProduto)
            {
                @if(item.ProdutoTipo == "roupa")
                {
                    <div class="card">
                        <img class="card-image w-100" src="@item.ImagemUrl" alt="Roupa 1">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Nome</h5>
                            <p class="card-text fw-bold">R$ @item.Preco.ToString("F2")</p>
                            <a class="btn btn-primary w-100" asp-page="/Details" asp-route-slug="@item.NomeSlug" asp-route-id="@item.ProdutoId">Ver mais</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</section>
<section class="secao-equipamentos mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h3 class="titulo-secao text-center">Equipamentos</h3>
        </div>
        <div class="card-group d-flex justify-content-between">
                @foreach (var item in Model.ListaProduto)
                {
                    @if (item.ProdutoTipo == "equipamento")
                    {
                        <div class="card">
                            <img class="card-image w-100" src="@item.ImagemUrl" alt="Roupa 1">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">@item.Nome</h5>
                                <p class="card-text fw-bold">R$ @item.Preco</p>
                            <a class="btn btn-primary w-100" asp-page="/Details" asp-route-slug="@item.NomeSlug" asp-route-id="@item.ProdutoId">Ver mais</a>
                            </div>
                        </div>
                    }
                }
        </div>
    </div>

</section>
