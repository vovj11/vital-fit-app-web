    <div class="row mb-4">
        <div class="col-md-12">
            <h3 class="titulo-secao text-center">Acessórios</h3>
        </div>
        <div class="card-group d-flex justify-content-between">
            @foreach (var item in Model.ListaProduto)
            {
                @if (item.ProdutoTipo == "acessorio")
