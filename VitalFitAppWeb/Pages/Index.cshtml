                    <div class="card">
                        <img class="card-image w-100" src="@item.ImagemUrl" alt="Roupa 1">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Nome</h5>
                            <p class="card-text fw-bold">R$ @item.Preco</p>
                            <a class="btn btn-primary w-100" asp-page="/Details"  asp-route-slug="@item.NomeSlug" asp-route-id="@item.ProdutoId">Ver mais</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</section>